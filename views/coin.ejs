<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto widgets</title>
    <meta name="description" content="Simple embeddable crypto widgets.">
    <link
    rel="icon"
    href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“Ÿ</text></svg>"
    />
</head>
<style>
    body{
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
    background-color: #000000;
    color: white;
    box-sizing: border-box;
    margin:0;
    padding:0;
    }

    main{
        /* border-radius: 2px; */
        padding: 4px;
    }

    td {
        font-size: 14px;
    }

    .pull{
        position: relative; top: -5px
    }

    td span{
        font-size: 12px;
        color: gray;
    }
</style>
<body>
    <main>
        <div id="widget" style="max-width: 260px;">
            <div class="top-row">
                <img id="logo" style="width:32px;height:32px;float:left;" src="https://assets.coingecko.com/coins/images/1/small/bitcoin.png?1547033579" alt="Coin logo">
                <div style="float:left;font-size: 16px; margin-left: 5px;">
                    <span id="name"></span>
                    <span id="ticker" style="font-size:12px; color:grey; font-weight:500"></span>
                    <br>
                    <span id="rank" style="font-size: 12px; position: relative;  top:-1px;color: grey;">Rank: </span>
                </div>
                <div id="price" style="font-weight: 700; float:right;"></div>
                <br>
                <div>
                    <span style="font-size: 12px; float:right; position:relative; top:3px; color: grey;">24h low / 24h high</span>
                    <div id="range" style="font-size: 14px; margin-top:4px; float:right;"></div>
                </div>
            </div>
            
            <div class="middle-row" >
                <table style="width: 100%;">
                    <tr>
                        <td><span>Market cap</span></td>
                        <td style="float:right"><span style="font-size: 12px;  color: grey;">24h volume</span></td>
                    </tr>
                    <tr>
                        <td class="pull" id="mcap"></td>
                        <td class="pull" id="volume" style="float:right;"></td>
                    </tr>
                </table>
            </div>

            <div class="bottom-row">
                <table style="width: 100%;">
                    <tr>
                        <td style="position: relative; top:-5px"><span>Circulating / Total supply</span></td>
                    </tr>
                    <tr>
                        <td style="position: relative; top:-8px" id="supply" ></td>
                    </tr>
                </table>
            </div>
        </div>
    </main>
</body>
<script>
let formattedPrice, low, high, maxSupply, circulatingSupply, mcap;

//TODO Check CG total supply vs max supply

    //Get CoinGecko coin ID from URl 
    const queryString = window.location.search;
    const urlParams  = new URLSearchParams(queryString);
    const id = urlParams.get('name')
    setData(id) //Setting data on first load
    
    //Initializing refresh
    setInterval(() => {
        setData(id, true)
    }, 3000);
    function setData(id, isRefresh = false){
        fetch(`https://api.coingecko.com/api/v3/coins/${id}?tickers=false&community_data=false&developer_data=false&sparkline=false`)
        .then(response => response.json())
        .then(data => {
            formattedPrice =  (data.market_data.current_price.usd > 10 ? data.market_data.current_price.usd.toLocaleString() : data.market_data.current_price.usd);
            low = (data.market_data.low_24h.usd > 999 ? data.market_data.low_24h.usd.toLocaleString() : data.market_data.low_24h);
            high = (data.market_data.high_24h.usd > 999 ? data.market_data.high_24h.usd.toLocaleString() : data.market_data.high_24h);
            maxSupply =  (data.market_data.max_supply == null ? "N/A": data.market_data.max_supply.toLocaleString());
            circulatingSupply = (data.market_data.circulating_supply == null ? "N/A": data.market_data.circulating_supply.toLocaleString());
            mcap = (data.market_data.market_cap.usd == null ? "N/A": data.market_data.market_cap.usd.toLocaleString());
            console.log(formattedPrice)
            if (!isRefresh){
                document.getElementById("logo").src = data.image.small;
                document.getElementById("ticker").innerHTML = `[${data.symbol.toUpperCase()}]`
                setHtml("name", data.name);
            }
            setHtml("rank", `Rank: ${data.coingecko_rank}`);
            setHtml("price", `$${formattedPrice}`);
            setHtml("mcap", `$${mcap}`);
            setHtml("volume", `$${data.market_data.total_volume.usd.toLocaleString()}`)
            setSplitStats("range", low, high);
            setSplitStats("supply", circulatingSupply, maxSupply);
        })
        .catch(error => console.log(error))
    }

    function setHtml(elementId, html){
        var el = document.getElementById(elementId);
        el.innerHTML = html;
    }

    function setSplitStats(elementId, statOne, statTwo){
        var el = document.getElementById(elementId);
        el.innerHTML = `$${statOne} / $${statTwo}`;
    }
</script>
</html>